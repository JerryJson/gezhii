<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.gezhii.fitgroup.ui.view.RectImageView
        android:id="@+id/head_img"
        style="@style/oval_img_style"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/o2" />

    <TextView
        android:id="@+id/say_right_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="88dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/head_img"
        android:background="@drawable/pink_right_dialog"
        android:gravity="center_vertical"
        android:text="小Q吗？机器人也有名字呢"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_30" />
</RelativeLayout>