<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/share_to_third_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/profile_item_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="12dp">

            <RelativeLayout
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="7dp">

                <com.gezhii.fitgroup.ui.view.RectImageView
                    android:id="@+id/user_icon_img"
                    style="@style/oval_img_style"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    tools:src="@mipmap/ic_launcher" />

                <com.gezhii.fitgroup.ui.view.RectImageView
                    android:id="@+id/user_vip_icon"
                    style="@style/oval_img_style"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/vip_medal" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_28"
                    tools:text="用户名" />

                <TextView
                    android:id="@+id/sign_now_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2月14日"
                    android:singleLine="true"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/gray_9b"
                    android:textSize="@dimen/text_size_22" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="fill_parent"
                android:gravity="right|center">

                <TextView
                    android:id="@+id/whether_follow_btn"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/whether_follow_btn_bg"
                    android:padding="6dp"
                    android:gravity="center"
                    android:text="关 注"
                    android:textColor="@color/pink_ff"
                    android:textSize="@dimen/text_size_28"
                    />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/sign_description_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="12dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_28"
            tools:text="今天跑了7公里，简直累成狗" />

        <ImageView
            android:id="@+id/sign_img"
            android:layout_width="fill_parent"
            android:layout_height="350dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/task_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="6dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="6dp">

            <ImageView
                android:id="@+id/sign_card_small_icon_img"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/task_sign_small_icon" />

            <TextView
                android:id="@+id/sign_task_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:gravity="center"
                android:textColor="@color/blue_3a"
                android:textSize="@dimen/text_size_22"
                tools:text="#每日1万步#" />

            <TextView
                android:id="@+id/sign_task_continue_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="@color/gray_97"
                android:textSize="@dimen/text_size_22"
                tools:text="累计打卡2天" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/like_count_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:paddingLeft="12dp"
            android:paddingTop="6dp">

            <ImageView
                android:layout_width="11dp"
                android:layout_height="13dp"
                android:layout_marginTop="2dp"
                android:src="@mipmap/like_count_icon" />

            <TextView
                android:id="@+id/like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="6人赞"
                android:textColor="@color/blue_3a"
                android:textSize="@dimen/text_size_26" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/comment_content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="12dp">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/comment_more_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:id="@+id/comment_more_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看所有4条评论"
                android:textColor="@color/gray_97"
                android:textSize="@dimen/text_size_26" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="10dp"
                android:src="@mipmap/gray_small_arrow" />

        </LinearLayout>

        <com.gezhii.fitgroup.ui.view.LineView
            style="@style/line_dash_style_gray_c8"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp" />

        <LinearLayout
            android:id="@+id/share_btn_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/comment_like"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="6dp">

                <ImageView
                    android:id="@+id/sign_like_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/chat_sign_like_select" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/comment_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="6dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="17dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/private_chat_from_sign" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/share_to_third_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="6dp">

                <ImageView
                    android:id="@+id/share_to_third_img"
                    android:layout_width="14dp"
                    android:layout_height="22dp"
                    android:src="@mipmap/share_to_third_gray" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/report_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="right|center_vertical">

                <ImageView
                    android:id="@+id/more_dot_btn"
                    android:layout_width="20dp"
                    android:layout_height="8dp"
                    android:layout_marginRight="25dp"
                    android:src="@mipmap/more_dot" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>