<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_80">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <ImageView
                android:id="@+id/close_img"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:padding="7dp"
                android:src="@mipmap/bmi_close" />

            <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="运动日程"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_34" />
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/black_80">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginTop="78dp"
            android:background="@color/white">

        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="54dp">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@mipmap/white_circle_bg" />

            <com.gezhii.fitgroup.ui.view.RectImageView
                android:id="@+id/icon_img"
                style="@style/oval_img_style"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:padding="2dp"
                android:scaleType="centerCrop" />¬
        </FrameLayout>


    </FrameLayout>

    <com.gezhii.fitgroup.ui.view.LoadMoreListView
        android:id="@+id/sport_record_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </com.gezhii.fitgroup.ui.view.LoadMoreListView>

    <RelativeLayout
        android:id="@+id/join_with_vip_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bottom_adopt_rectangle">

        <TextView
            android:id="@+id/adopt_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="和TA一起练"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_34" />
    </RelativeLayout>
</LinearLayout>