<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/sign_card_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rectangle_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/spacing_normal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_small">

                <TextView
                    android:id="@+id/card_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/sign"
                    android:textColor="@color/pink_ff"
                    android:textSize="@dimen/text_size_30" />


                <TextView
                    android:id="@+id/card_send_time_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/spacing_tiny"
                    android:layout_weight="1"
                    android:textColor="@color/gray_97"
                    android:textSize="@dimen/text_size_28"
                    tools:text="2015.9.10 | 22:00" />

                <ImageView
                    android:id="@+id/sign_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/chat_sign_like_select" />

                <TextView
                    android:id="@+id/sign_count_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/spacing_tiny"
                    android:textColor="@color/pink_ff"
                    android:textSize="@dimen/text_size_28"
                    tools:text="12" />

                <ImageView
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="23dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/share_to_third"
                    android:id="@+id/share_to_third_img" />
            </LinearLayout>


            <ImageView
                android:id="@+id/card_img"
                android:layout_width="fill_parent"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                tools:background="@color/purple" />

            <FrameLayout

                android:layout_width="@dimen/button_height_taller"
                android:layout_height="@dimen/button_height_taller"
                android:layout_gravity="center"
                android:layout_marginTop="-32dp"
                android:background="@drawable/oval_white">

                <com.gezhii.fitgroup.ui.view.RectImageView
                    android:id="@+id/card_user_icon_img"
                    style="@style/oval_img_style"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="1dp"
                    tools:src="@drawable/oval_red" />

            </FrameLayout>


            <TextView
                android:id="@+id/card_description_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_large"
                android:layout_marginRight="@dimen/spacing_large"
                android:paddingTop="@dimen/spacing_normal"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_30"
                tools:text="为了甩肉我也是够拼的，周末早起跑了大半个徐汇！！" />

            <LinearLayout
                android:id="@+id/diet_title_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large"
                android:orientation="horizontal">


                <com.gezhii.fitgroup.ui.view.LineView
                    style="@style/line_dash_style_gray_9b"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/spacing_normal"
                    android:layout_marginRight="@dimen/spacing_small"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/today_diet"
                    android:textColor="@color/gray_97"
                    android:textSize="@dimen/text_size_28" />


                <com.gezhii.fitgroup.ui.view.LineView
                    style="@style/line_dash_style_gray_9b"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/spacing_small"
                    android:layout_marginRight="@dimen/spacing_normal"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/diet_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/spacing_large"
                android:paddingRight="@dimen/spacing_large" />


            <LinearLayout
                android:id="@+id/sport_title_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large"
                android:orientation="horizontal">

                <com.gezhii.fitgroup.ui.view.LineView
                    style="@style/line_dash_style_gray_9b"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/spacing_normal"
                    android:layout_marginRight="@dimen/spacing_small"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/today_sport"
                    android:textColor="@color/gray_97"
                    android:textSize="@dimen/text_size_28" />

                <com.gezhii.fitgroup.ui.view.LineView
                    style="@style/line_dash_style_gray_9b"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/spacing_small"
                    android:layout_marginRight="@dimen/spacing_normal"
                    android:layout_weight="1" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/sport_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/spacing_large"
                android:paddingRight="@dimen/spacing_large" />


        </LinearLayout>
    </FrameLayout>
</FrameLayout>