<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_small">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/spacing_normal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/diet_image"
                    android:layout_width="@dimen/button_height_shorter"
                    android:layout_height="@dimen/button_height_shorter"
                    android:layout_gravity="center"
                    android:src="@mipmap/duration" />

                <TextView
                    android:id="@+id/diet_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/spacing_small"
                    android:text="@string/input_duration"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_34" />
            </LinearLayout>

            <EditText
                android:id="@+id/params_input"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_normal"
                android:background="@drawable/rounded_rectangle_gray_frame_bg_white"
                android:gravity="top|left"
                android:inputType="text"
                android:minHeight="@dimen/button_height_taller"
                android:padding="@dimen/spacing_small"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_28"
                tools:hint="这顿吃得要像皇上：碳水化合物+蛋白质+维生素" />

        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>