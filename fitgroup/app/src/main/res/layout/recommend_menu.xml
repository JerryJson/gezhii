<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="159dp"
    android:background="@mipmap/recommend_menu_bg"
    android:gravity="center"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2" />

    <LinearLayout
        android:id="@+id/recommend_group"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="30dp">

        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="17dp"
                android:layout_marginRight="5dp"
                android:scaleType="fitXY"
                android:src="@mipmap/recommend_group_icon" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐公会"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_34" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#4BC0C7" />

    <LinearLayout
        android:id="@+id/recommend_vip"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="30dp">

        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="17dp"
                android:layout_marginRight="5dp"
                android:scaleType="fitXY"
                android:src="@mipmap/recommend_vip_icon" />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:layout_marginTop="13dp"
            android:text="推荐达人"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_34" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#4BC0C7" />

    <LinearLayout
        android:id="@+id/recommend_channel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="30dp">

        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="17dp"
                android:layout_marginRight="5dp"
                android:scaleType="fitXY"
                android:src="@mipmap/recommend_channel_icon" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐频道"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_34" />
    </LinearLayout>

</LinearLayout>