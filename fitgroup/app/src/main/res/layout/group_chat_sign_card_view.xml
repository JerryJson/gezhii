<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="180dp"
    android:layout_height="130dp">

    <LinearLayout
        android:id="@+id/sign_card_normal_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/rounded_rectangle_gray_frame_bg_white"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_small">

            <TextView
                android:id="@+id/card_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/pink_ff"
                android:textSize="@dimen/text_size_18"
                tools:text="慢跑打卡" />


            <TextView
                android:id="@+id/card_send_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:textColor="@color/gray_97"
                android:textSize="@dimen/text_size_12"
                tools:text="2015.9.10 | 22:00" />


        </FrameLayout>


        <ImageView
            android:id="@+id/card_img"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:scaleType="centerCrop"
            tools:background="@color/purple" />

        <FrameLayout
            android:layout_width="@dimen/button_height_short"
            android:layout_height="@dimen/button_height_short"
            android:layout_gravity="center"
            android:layout_marginTop="-16dp"
            android:background="@drawable/oval_white">

            <com.gezhii.fitgroup.ui.view.RectImageView
                android:id="@+id/card_user_icon_img"
                style="@style/oval_img_style"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="1dp"
                tools:src="@drawable/oval_red" />

        </FrameLayout>


        <TextView
            android:id="@+id/card_description_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_small"
            android:layout_marginRight="@dimen/spacing_small"
            android:layout_marginTop="@dimen/spacing_small"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14"
            android:visibility="gone"
            tools:text="为了甩肉我也是够拼的，周末早起跑了大半个徐汇！！" />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_normal"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_small"
                android:layout_marginRight="@dimen/spacing_small"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/data_1_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_24"
                    tools:text="60分钟" />

                <com.gezhii.fitgroup.ui.view.LineView
                    style="@style/line_dash_style_gray_9b"
                    android:layout_width="1dp"
                    android:layout_height="fill_parent" />


                <TextView
                    android:id="@+id/data_2_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_24"
                    tools:text="负重5公斤" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:orientation="horizontal">


                <com.gezhii.fitgroup.ui.view.LineView
                    style="@style/line_dash_style_gray_9b"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/spacing_normal"
                    android:layout_marginRight="@dimen/spacing_small"
                    android:layout_weight="1" />

                <com.gezhii.fitgroup.ui.view.LineView
                    style="@style/line_dash_style_gray_9b"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/spacing_small"
                    android:layout_marginRight="@dimen/spacing_normal"
                    android:layout_weight="1" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_small"
                android:layout_marginRight="@dimen/spacing_small"
                android:layout_marginTop="@dimen/spacing_small"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/data_3_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_24"
                    tools:text="20次X3组" />

                <com.gezhii.fitgroup.ui.view.LineView
                    style="@style/line_dash_style_gray_9b"
                    android:layout_width="1dp"
                    android:layout_height="fill_parent" />


                <TextView
                    android:id="@+id/data_4_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_24"
                    tools:text="7公里" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


    <ImageView
        android:id="@+id/sign_card_empty_img"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@color/green_b8"
        android:visibility="gone" />

</FrameLayout>