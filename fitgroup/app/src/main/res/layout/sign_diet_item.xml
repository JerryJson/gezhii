<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/spacing_small"
    android:paddingLeft="@dimen/spacing_small"
    android:paddingRight="@dimen/spacing_normal"
    android:paddingTop="@dimen/spacing_small">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/diet_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            tools:src="@mipmap/count" />

        <TextView
            android:id="@+id/diet_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/spacing_small"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_26"
            tools:text="慢跑" />


        <ImageView
            android:id="@+id/diet_remove"
            android:layout_width="@dimen/button_height_tiny"
            android:layout_height="@dimen/button_height_tiny"
            android:layout_gravity="center"
            android:src="@mipmap/sign_remove" />

    </LinearLayout>

    <TextView
        android:id="@+id/diet_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="@dimen/spacing_small"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_28"
        tools:text="绿豆粥一碗，玉米饼30g，煎蛋一个，香蕉一根" />


</LinearLayout>