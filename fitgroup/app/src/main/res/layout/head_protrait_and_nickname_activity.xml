<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    android:orientation="vertical">

    <include layout="@layout/title_view" />

    <com.gezhii.fitgroup.ui.view.RectImageView
        android:id="@+id/head_protrait_img"
        android:scaleType="centerCrop"
        style="@style/oval_img_style"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="92dp"
        android:src="@mipmap/no_head" />

    <EditText
        android:id="@+id/nickname_input"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/edittext_shape"
        android:padding="11dp"
        android:text="火华儿" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/blue_sure_shape"
        android:id="@+id/sure_layout">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/sure" />
    </RelativeLayout>
</LinearLayout>