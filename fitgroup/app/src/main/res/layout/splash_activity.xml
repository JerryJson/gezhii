<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.gezhii.fitgroup.ui.view.RectImageView
        android:id="@+id/splash_img"
        style="@style/MyDivRectImageViewNone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <ImageView
        android:id="@+id/logo_img"
        android:layout_width="43dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:src="@mipmap/logo_img" />

    <LinearLayout
        android:id="@+id/normal_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="17dp"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/logo_img"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/blue_3a"
            android:textSize="@dimen/text_size_44" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人人都是运动咖!"
            android:textColor="@color/gray_97"
            android:textSize="@dimen/text_size_24" />
    </LinearLayout>

    <ImageView
        android:visibility="invisible"
        android:id="@+id/special_image"
        android:layout_width="150dp"
        android:layout_height="33dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:src="@mipmap/splash_huawei" />


</RelativeLayout>