<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/root_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/page_bg">

                <ImageView
                    android:id="@+id/group_simple_profile_title_bg_image"
                    android:layout_width="fill_parent"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/group_profile_mask" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <!--<ImageView-->
                            <!--android:id="@+id/back_btn"-->
                            <!--android:layout_width="32dp"-->
                            <!--android:layout_height="48dp"-->
                            <!--android:paddingBottom="14dp"-->
                            <!--android:paddingLeft="10dp"-->
                            <!--android:paddingRight="10dp"-->
                            <!--android:paddingTop="12dp"-->
                            <!--android:src="@mipmap/title_back" />-->

                        <TextView
                            android:id="@+id/title_text"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_34"
                            tools:text="我是菇凉,我有肌肉" />
                    </FrameLayout>


                    <TextView
                        android:id="@+id/group_leader_info_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_24"
                        tools:text="会长:丁丁  公会号:384720" />

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp">

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginTop="38dp"
                            android:background="@color/white" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingBottom="20dp"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp">

                            <com.gezhii.fitgroup.ui.view.RectImageView
                                android:id="@+id/group_leader_icon_img"
                                style="@style/oval_img_style"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_gravity="center"
                                android:src="@mipmap/ic_launcher" />

                            <FrameLayout
                                android:id="@+id/star_leader_interview_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="-18dp">

                                <ImageView
                                    android:layout_width="186dp"
                                    android:layout_height="35dp"
                                    android:src="@mipmap/group_leader_interview" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="28dp"
                                    android:layout_gravity="center_horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="fill_parent"
                                        android:gravity="center"
                                        android:text="明星会长访谈"
                                        android:textColor="@color/white" />

                                    <ImageView
                                        android:layout_width="12dp"
                                        android:layout_height="12dp"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="@dimen/spacing_tiny"
                                        android:src="@mipmap/group_leader_arrow" />
                                </LinearLayout>

                            </FrameLayout>


                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="63dp"
                                android:layout_marginRight="63dp"
                                android:layout_marginTop="12dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/group_level_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/text_size_64"
                                        tools:text="3" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="8dp"
                                        android:text="公会等级"
                                        android:textColor="@color/gray_9b"
                                        android:textSize="@dimen/text_size_22" />
                                </LinearLayout>


                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="1" />

                                <com.gezhii.fitgroup.ui.view.LineView
                                    style="@style/line_dash_style_gray_c8"
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginTop="10dp" />

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="fill_parent"
                                    android:background="@color/white" />

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="1" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/group_activeness_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/text_size_64"
                                        tools:text="80%" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="8dp"
                                        android:text="活跃度"
                                        android:textColor="@color/gray_9b"
                                        android:textSize="@dimen/text_size_22" />
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_small"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/rounded_rectangle_white"
                        android:orientation="vertical"
                        android:paddingBottom="15dp"
                        android:paddingLeft="14dp"
                        android:paddingRight="14dp"
                        android:paddingTop="15dp">

                        <TextView
                            android:id="@+id/group_task_title_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="14dp"
                            android:text="公会任务"
                            android:textColor="@color/gray_9b"
                            android:textSize="@dimen/text_size_24" />

                        <com.gezhii.fitgroup.ui.view.TasksView
                            android:id="@+id/tasks_view"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" />

                        <View
                            android:id="@+id/group_task_divider_view"
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="14dp"
                            android:background="@color/divider1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="14dp"
                            android:text="公会介绍"
                            android:textColor="@color/gray_9b"
                            android:textSize="@dimen/text_size_24" />

                        <TextView
                            android:id="@+id/group_description_text"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="3"
                            android:paddingBottom="10dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_28"
                            tools:text="测试数据数据.." />

                        <TextView
                            android:id="@+id/show_more_description_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="12dp"
                            android:text="显示更多"
                            android:textColor="@color/gray_97"
                            android:textSize="@dimen/text_size_24" />

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:background="@color/divider1" />

                        <TextView
                            android:id="@+id/group_tag_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="14dp"
                            android:layout_marginTop="14dp"
                            android:text="公会标签"
                            android:textColor="@color/gray_9b"
                            android:textSize="@dimen/text_size_24" />

                        <com.gezhii.fitgroup.ui.view.TagsView
                            android:id="@+id/tags_view"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                        </com.gezhii.fitgroup.ui.view.TagsView>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:background="@color/divider1" />

                        <TextView
                            android:id="@+id/group_member_count_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="14dp"
                            android:layout_marginTop="14dp"
                            android:text="公会成员: 20人"
                            android:textColor="@color/gray_9b"
                            android:textSize="@dimen/text_size_24" />

                        <com.gezhii.fitgroup.ui.view.IconsView
                            android:id="@+id/icons_view"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                        </com.gezhii.fitgroup.ui.view.IconsView>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="13dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="27dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/group_sign"
                    android:textColor="@color/gray_97"
                    android:textSize="@dimen/text_size_28" />

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:id="@+id/group_no_sign_records_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="40dp"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="还没有人打卡，求破冰"
                            android:textColor="@color/gray_97"
                            android:textSize="@dimen/text_size_26" />
                    </RelativeLayout>


                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>