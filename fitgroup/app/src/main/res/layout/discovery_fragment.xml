<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg">

    <View
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:background="@color/colorPrimary"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="42dp"
        android:paddingLeft="34dp">

        <LinearLayout
            android:id="@+id/baike_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/baike"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_28"
                    android:textColor="@color/white"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="2dp"
                    android:text="减肥百科"/>
            </LinearLayout>

            <ImageView
                android:layout_width="3dp"
                android:layout_height="7dp"
                android:src="@mipmap/white_small_arrow"
                android:layout_gravity="center"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/page_bg"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"/>

        <LinearLayout
            android:id="@+id/group_sort_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/group_sort"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_28"
                    android:textColor="@color/white"
                    android:layout_marginTop="8dp"
                    android:text="公会排行"/>
            </LinearLayout>

            <ImageView
                android:layout_width="3dp"
                android:layout_height="7dp"
                android:src="@mipmap/white_small_arrow"
                android:layout_marginLeft="2dp"
                android:layout_gravity="center"/>
        </LinearLayout>

    </LinearLayout>

    <com.gezhii.fitgroup.ui.view.LoadMoreListView
        android:id="@+id/star_leader_list_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        />


    </LinearLayout>
</FrameLayout>