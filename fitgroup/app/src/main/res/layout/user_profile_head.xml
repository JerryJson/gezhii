<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/user_profile_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:gravity="right|bottom">

                    <com.gezhii.fitgroup.ui.view.RectImageView
                        android:id="@+id/user_profile_icon"
                        style="@style/oval_img_style"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@mipmap/ic_launcher" />

                    <com.gezhii.fitgroup.ui.view.RectImageView
                        android:id="@+id/user_profile_vip"
                        style="@style/oval_img_style"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/vip_medal" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_weight="3"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="5dp">

                    <LinearLayout
                        android:id="@+id/mentees_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/user_profile_adoption_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7"
                            android:textColor="@color/pink_ff"
                            android:textSize="@dimen/text_size_44" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="跟随者"
                            android:textColor="@color/black_4a"
                            android:textSize="@dimen/text_size_30" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fans_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/user_profile_followed_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8"
                            android:textColor="@color/pink_ff"
                            android:textSize="@dimen/text_size_44" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="粉丝"
                            android:textColor="@color/black_4a"
                            android:textSize="@dimen/text_size_30" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/following_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/user_profile_following_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="888"
                            android:textColor="@color/pink_ff"
                            android:textSize="@dimen/text_size_44" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="关注"
                            android:textColor="@color/black_4a"
                            android:textSize="@dimen/text_size_30" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/user_profile_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:textColor="@color/pink_ff"
                            android:textSize="@dimen/text_size_44" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="等级"
                            android:textColor="@color/black_4a"
                            android:textSize="@dimen/text_size_30" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/user_profile_follow_btn"
                        android:layout_width="225dp"
                        android:layout_height="28dp"
                        android:background="@drawable/whether_follow_btn_bg"
                        android:gravity="center"
                        android:text="关注"
                        android:textColor="@color/pink_ff"
                        android:textSize="@dimen/text_size_30" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/user_profile_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingBottom="12dp"
            android:paddingLeft="33dp"
            android:paddingTop="12dp"
            android:text="自我介绍：XXXXXXXXX" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/user_profile_group"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/user_profile_group_img"
                    android:layout_width="19dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/group_icon_normal" />

                <TextView
                    android:id="@+id/user_profile_group_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Ta的公会"
                    android:textColor="@color/blue_3a"
                    android:textSize="@dimen/text_size_34" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:id="@+id/user_profile_sport_plan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="21dp"
                    android:src="@mipmap/sport_plan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="运动日程"
                    android:textColor="@color/blue_3a"
                    android:textSize="@dimen/text_size_34" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>