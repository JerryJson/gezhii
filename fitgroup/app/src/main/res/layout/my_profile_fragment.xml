<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    android:orientation="vertical">

    <include layout="@layout/title_view" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:gravity="right|bottom">

                        <com.gezhii.fitgroup.ui.view.RectImageView
                            android:id="@+id/user_profile_icon"
                            style="@style/oval_img_style"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:src="@mipmap/ic_launcher" />

                        <com.gezhii.fitgroup.ui.view.RectImageView
                            android:id="@+id/user_profile_vip"
                            style="@style/oval_img_style"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:src="@mipmap/vip_medal" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingTop="5dp">

                        <LinearLayout
                            android:id="@+id/user_profile_adoption_btn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/user_profile_adoption_count_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/pink_ff"
                                android:textSize="@dimen/text_size_44"
                                tools:text="7" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="跟随者"
                                android:textColor="@color/black_4a"
                                android:textSize="@dimen/text_size_30" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/user_profile_followed_btn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/user_profile_followed_count_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/pink_ff"
                                android:textSize="@dimen/text_size_44"
                                tools:text="8" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="粉丝"
                                android:textColor="@color/black_4a"
                                android:textSize="@dimen/text_size_30" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/user_profile_following_btn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/user_profile_following_count_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/pink_ff"
                                android:textSize="@dimen/text_size_44"
                                tools:text="888" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="关注"
                                android:textColor="@color/black_4a"
                                android:textSize="@dimen/text_size_30" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/user_profile_level_btn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/user_profile_level_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/pink_ff"
                                android:textSize="@dimen/text_size_44"
                                tools:text="3" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="等级"
                                android:textColor="@color/black_4a"
                                android:textSize="@dimen/text_size_30" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="2"
                        android:gravity="center_horizontal">

                        <LinearLayout
                            android:id="@+id/all_badages_layout"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="13dp"
                            android:layout_marginRight="13dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/bagde_1_img"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginRight="8dp"
                                android:src="@mipmap/ic_launcher" />

                            <ImageView
                                android:id="@+id/bagde_2_img"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginRight="8dp"
                                android:src="@mipmap/ic_launcher" />

                            <ImageView
                                android:id="@+id/bagde_3_img"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@mipmap/ic_launcher" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="14dp"
                                android:text="所有徽章"
                                android:textColor="@color/gray_97"
                                android:textSize="@dimen/text_size_24" />

                            <ImageView
                                android:layout_width="7dp"
                                android:layout_height="12dp"
                                android:src="@mipmap/gray_small_arrow" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="10dp"
                android:weightSum="4">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:id="@+id/go_edit_person_info_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="13dp"
                        android:background="@drawable/rounded_rectangle_stroke_gray">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:text="编辑个人信息"
                            android:textColor="@color/gray_c8" />
                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/fit_plan_btn"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="12dp"
                            android:src="@mipmap/sport_plan" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="运动日程"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_28" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1" />

                        <ImageView
                            android:layout_width="7dp"
                            android:layout_height="12dp"
                            android:src="@mipmap/gray_small_arrow" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/gray_ea" />

                    <LinearLayout
                        android:id="@+id/my_post_btn"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="12dp"
                            android:src="@mipmap/my_post" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的动态"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_28" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1" />

                        <ImageView
                            android:layout_width="7dp"
                            android:layout_height="12dp"
                            android:src="@mipmap/gray_small_arrow" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/gray_ea" />

                    <LinearLayout
                        android:id="@+id/application_to_be_vip_btn"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="12dp"
                            android:src="@mipmap/to_be_vip" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="申请成为达人"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_28" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1" />

                        <ImageView
                            android:layout_width="7dp"
                            android:layout_height="12dp"
                            android:src="@mipmap/gray_small_arrow" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/gray_ea" />

                    <LinearLayout
                        android:id="@+id/private_chat_list_btn"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="12dp"
                            android:src="@mipmap/private_message" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="私信"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_28" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1" />

                        <ImageView
                            android:id="@+id/private_new_message_img"
                            android:layout_width="29dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="10dp"
                            android:src="@mipmap/private_message_new" />

                        <ImageView
                            android:layout_width="7dp"
                            android:layout_height="12dp"
                            android:src="@mipmap/gray_small_arrow" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bessel_curve_normal_layout"
                android:layout_width="fill_parent"
                android:layout_height="210dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/rounded_rectangle_pink_ff"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_small">

                    <TextView
                        android:id="@+id/bessel_curve_normal_weight_title_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_28"
                        tools:text="10月21日 20:00" />


                    <ImageView
                        android:id="@+id/bessel_curve_normal_add_weight_btn"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/add_weight" />

                </LinearLayout>

                <TextView
                    android:id="@+id/bessel_curve_normal_weight_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_48"
                    tools:text="65KG" />


                <com.gezhii.fitgroup.ui.view.bessel_curve.BesselCurveViewScroller
                    android:id="@+id/bessel_curve_view"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/pink_ff" />


                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/bottom_rounded_rectangle_white">

                    <LinearLayout
                        android:id="@+id/go_to_bmi_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/go_to_bmi_img"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/spacing_normal"
                            android:src="@mipmap/info_gray" />

                        <TextView
                            android:id="@+id/bessel_curve_normal_bmi_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/spacing_small"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_28"
                            tools:text="BMI:21.6" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/bessel_curve_normal_body_type_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="@dimen/spacing_normal"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_28"
                        tools:text="体型:微胖" />

                    <RelativeLayout
                        android:id="@+id/no_fit_type_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="44dp"
                        android:background="@drawable/bottom_rounded_rectangle_white"
                        android:visibility="invisible">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="17dp"
                                android:layout_height="19dp"
                                android:src="@mipmap/add_weight_pink" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:gravity="center"
                                android:text="测一测我属于哪一种体型"
                                android:textColor="@color/pink_ff"
                                android:textSize="@dimen/text_size_28" />
                        </LinearLayout>
                    </RelativeLayout>

                </FrameLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/bessel_curve_empty_layout"
                android:layout_width="fill_parent"
                android:layout_height="210dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/rounded_rectangle_pink_ff"
                android:orientation="vertical">


                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/empty_add_weight_btn"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/add_weight" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/spacing_small">

                            <TextView
                                android:id="@+id/empty_title_text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="测一测我属于哪一种体型"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_28" />

                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="30dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>