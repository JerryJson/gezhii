<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_rounded_rectangle_white"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/leader_icon_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                tools:src="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/group_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_30"
                        tools:text="甩肉会" />


                    <TextView
                        android:id="@+id/member_num_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:textColor="@color/pink_ff"
                        tools:text="18人" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="3dp"
                        android:layout_toLeftOf="@id/member_num_text"
                        android:src="@mipmap/icon_member" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/group_introduce_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:singleLine="true"
                    android:textColor="@color/gray_97"
                    android:textSize="@dimen/text_size_26"
                    tools:text="哎呦不错这个屌恍恍惚惚恍恍惚惚红红火火红红火火还好" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_rounded_rectangle_gray_fa"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:background="@drawable/rounded_rectangle_gray_ea"
                android:gravity="center"
                android:text="@string/task"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_24" />

            <LinearLayout
                android:id="@+id/task_list_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>