<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_32"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/close_img"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:padding="7dp"
            android:src="@mipmap/bmi_close" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:text="BMI"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_34" />

        <TextView
            android:id="@+id/change_body_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:text="修改身体数据"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_28" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="BMI指数:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_26" />

                <TextView
                    android:id="@+id/bmi_index_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:gravity="center"
                    android:text="21.6"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_64" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="体型:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_26" />

                <TextView
                    android:id="@+id/figure_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:gravity="center"
                    android:text="标准"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_64" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginTop="62dp"
        android:orientation="horizontal"
        android:weightSum="35">

        <View
            android:id="@+id/empty_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0" />

        <ImageView
            android:layout_width="11dp"
            android:layout_height="9dp"
            android:src="@mipmap/bmi_triangle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="17dp"
            android:layout_weight="8"
            android:background="@drawable/rectangular_angle_left"
            android:gravity="center"
            android:text="偏瘦"
            android:textColor="@color/black_32"
            android:textSize="@dimen/text_size_24" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="17dp"
            android:layout_weight="11"
            android:background="@color/green_94"
            android:gravity="center"
            android:text="标准"
            android:textColor="@color/black_32"
            android:textSize="@dimen/text_size_24" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="17dp"
            android:layout_weight="8"
            android:background="@color/orange"
            android:gravity="center"
            android:text="偏胖"
            android:textColor="@color/black_32"
            android:textSize="@dimen/text_size_24" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="17dp"
            android:layout_weight="8"
            android:background="@drawable/rectangular_angle_right"
            android:gravity="center"
            android:text="肥胖"
            android:textColor="@color/black_32"
            android:textSize="@dimen/text_size_24" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="18.5"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_24" />

        <TextView
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="24.0"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_24" />

        <TextView
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="28.0"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_24" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/bmi_explain_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="47dp"
            android:layout_marginLeft="52dp"
            android:layout_marginRight="52dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="BMI(Body Mass Index,简称BMI),即身体质量指数.是目前国际上常用的衡量人体胖瘦程度以及是否健康的一个标准.是用体重公斤数除以身高米数平方得出的数字."
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_26" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/bmi_explain_text"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bmi_contact_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="什么是BMI"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_28" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="7dp"
                android:layout_toLeftOf="@id/bmi_contact_text"
                android:src="@mipmap/dotted_line" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@id/bmi_contact_text"
                android:src="@mipmap/dotted_line" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
