<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/page_bg">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/page_bg">

            <ImageView
                android:id="@+id/group_profile_mask_img"
                android:layout_width="fill_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="160dp"
                android:background="@color/black_60" />

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/back_btn"
                    android:layout_width="36dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/title_back" />

                <ImageView
                    android:id="@+id/edit_group_img"
                    android:layout_width="20dp"
                    android:layout_height="21dp"
                    android:layout_gravity="right"
                    android:src="@mipmap/edit_group" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_34"
                    tools:text="我是菇凉,我有肌肉" />

                <TextView
                    android:id="@+id/group_leader_info_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_24"
                    tools:text="会长:丁丁  公会号:384720" />

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp">

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="38dp"
                        android:background="@drawable/rounded_rectangle_white" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="12dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp">

                        <com.gezhii.fitgroup.ui.view.RectImageView
                            android:id="@+id/group_leader_icon_img"
                            style="@style/oval_img_style"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_gravity="center"
                            tools:src="@mipmap/ic_launcher" />

                        <FrameLayout
                            android:id="@+id/star_leader_interview_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="-18dp">

                            <ImageView
                                android:layout_width="186dp"
                                android:layout_height="35dp"
                                android:src="@mipmap/group_leader_interview"
                                android:visibility="invisible" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="28dp"
                                android:layout_gravity="center_horizontal"
                                android:visibility="invisible">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"
                                    android:gravity="center"
                                    android:text="明星会长访谈"
                                    android:textColor="@color/white" />

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/spacing_tiny"
                                    android:src="@mipmap/group_leader_arrow" />
                            </LinearLayout>

                        </FrameLayout>


                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="63dp"
                            android:layout_marginRight="63dp"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/group_yestoday_signin_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_64"
                                    tools:text="3" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="13dp"
                                    android:text="昨日打卡会员"
                                    android:textColor="@color/gray_9b"
                                    android:textSize="@dimen/text_size_22" />
                            </LinearLayout>


                            <View
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="1" />

                            <com.gezhii.fitgroup.ui.view.LineView
                                style="@style/line_dash_style_gray_c8"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="fill_parent"
                                android:background="@color/white" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="1" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/group_activeness_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_64"
                                    tools:text="80%" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="13dp"
                                    android:text="活跃度"
                                    android:textColor="@color/gray_9b"
                                    android:textSize="@dimen/text_size_22" />
                            </LinearLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/today_signin_statistic_layout"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="20dp"
                                android:src="@mipmap/daily_report" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="7dp"
                                android:layout_marginRight="7dp"
                                android:text="查看今日打卡报告"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/text_size_28" />

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="6dp"
                                android:src="@mipmap/blue_small_arrow" />
                        </LinearLayout>

                        <com.gezhii.fitgroup.ui.view.LineView
                            style="@style/line_dash_style_gray_c8"
                            android:layout_width="fill_parent"
                            android:layout_height="1dp" />

                        <LinearLayout
                            android:id="@+id/group_level_upgrade_layout"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="公会等级"
                                    android:textColor="@color/gray_9b"
                                    android:textSize="@dimen/text_size_24" />

                                <TextView
                                    android:id="@+id/group_level_info_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_28"
                                    tools:text="3级会员,会员上限30人" />
                            </LinearLayout>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="升级进度"
                                android:textColor="@color/gray_9b"
                                android:textSize="@dimen/text_size_28" />

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="6dp"
                                android:src="@mipmap/gray_small_arrow" />
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:id="@+id/task_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="22dp"
                                android:src="@mipmap/task" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="公会任务"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_24" />
                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:background="@color/gray_c5" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:id="@+id/group_intro_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="18dp"
                                android:src="@mipmap/group_intro" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="公会介绍"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_24" />
                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:background="@color/gray_c5" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:id="@+id/group_notice_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="18dp"
                                android:src="@mipmap/notice" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="公告"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_24" />
                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="14dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:layout_marginTop="14dp"
                        android:background="@color/gray_ea" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/group_member_count_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_9b"
                            android:textSize="@dimen/text_size_24"
                            tools:text="公会成员: 20人" />

                        <TextView
                            android:id="@+id/group_full_flag_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:textColor="@color/pink_ff"
                            android:textSize="@dimen/text_size_22"
                            tools:text="已满" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/show_all_group_members_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="14dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.gezhii.fitgroup.ui.view.IconsView
                            android:id="@+id/icons_view"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@mipmap/show_all_members" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/into_group_application_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="14dp"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp"
                    android:paddingTop="20dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="9dp"
                        android:src="@mipmap/allow_into_group" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="入会申请"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_28" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1" />

                    <com.zcw.togglebutton.ToggleButton
                        android:id="@+id/allow_into_group"
                        android:layout_width="36dp"
                        android:layout_height="17dp"
                        app:offColor="@color/gray_97"
                        app:onColor="@color/pink_ff" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="30dp"
                    android:background="@color/gray_ea" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="14dp"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp"
                    android:paddingTop="20dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="9dp"
                        android:src="@mipmap/message_quiet" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="消息免打扰"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_28" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1" />

                    <com.zcw.togglebutton.ToggleButton
                        android:id="@+id/no_disturb_btn"
                        android:layout_width="36dp"
                        android:layout_height="17dp"
                        app:offColor="@color/gray_97"
                        app:onColor="@color/pink_ff" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_ea" />

                <LinearLayout
                    android:id="@+id/quit_group_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="17dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="14dp"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp"
                    android:paddingTop="14dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="23dp"
                        android:layout_marginRight="9dp"
                        android:src="@mipmap/quit_group" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="退出公会"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_28" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="6dp"
                        android:src="@mipmap/gray_small_arrow" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="30dp" />
            </LinearLayout>
        </FrameLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_ea" />

        <LinearLayout
            android:id="@+id/share_group_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/pink_ff"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="9dp"
            android:paddingTop="9dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="19dp"
                android:layout_marginRight="4dp"
                android:src="@mipmap/share_group" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享公会名片"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_34" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>

